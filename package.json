{
  "name": "@workgrid/ui",
  "version": "0.0.7",
  "description": "Workgrid UI component library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build-storybook": "build-storybook",
    "build": "tsc",
    "postbuild": "cp -R ./src/assets ./dist",
    "storybook": "start-storybook -p 6006",
    "format": "prettier --write '**/*.{json,yaml,yml,md,ts,tsx}' --ignore-path .gitignore",
    "test": "jest",
    "test:cypress": "cypress run-ct",
    "lint": "eslint --fix '**/*.{ts,tsx}' --ignore-path .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Workgrid/workgrid-ui-components"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.0.0",
    "moment": "^2.29.1",
    "react-hook-form": "^7.0.0",
    "rehype-react": "^6.2.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@cypress/react": "^5.4.0",
    "@cypress/webpack-dev-server": "^1.1.5",
    "@ionic/react": "^5.6.8",
    "@ionic/react-router": "^5.6.4",
    "@storybook/addon-a11y": "^6.3.0",
    "@storybook/addon-actions": "^6.3.0",
    "@storybook/addon-essentials": "^6.3.0",
    "@storybook/addon-links": "^6.3.0",
    "@storybook/addon-storyshots": "^6.3.0",
    "@storybook/addon-storyshots-puppeteer": "^6.3.0",
    "@storybook/react": "^6.3.0",
    "@testing-library/cypress": "^7.0.6",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@types/puppeteer": "^5.4.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "cypress": "^7.2.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "2.2.1",
    "puppeteer": "^5.5.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "styled-components": "^5.2.1",
    "typescript": "^4.1.2"
  },
  "peerDependencies": {
    "@ionic/react": ">=5.6.8",
    "@ionic/react-router": ">=5.4.1",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "styled-components": ">=5.2.1"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "jest-dom/prefer-to-have-value": "off",
      "react/jsx-curly-brace-presence": [
        2,
        "never"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/?(*.)+(cypress).tsx"
        ],
        "extends": [
          "plugin:cypress/recommended"
        ],
        "plugins": [
          "cypress"
        ],
        "rules": {
          "no-restricted-globals": [
            "error",
            {
              "name": "expect",
              "message": "use cy.wrap() instead."
            }
          ]
        }
      }
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/jest-config/styleMock.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest-config/fileMock.js"
    },
    "resetMocks": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{json,yaml,yml,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "license": "Apache-2.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
